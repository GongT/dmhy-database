{
	"files.associations": {
		"*.json": "jsonc"
	},
	"search.exclude": {
		"**/pnpm-lock.yaml": true,
		"**/temp/**": true,
		"**/node_modules/**/*": true,
		"*/*/lib": true,
		"*/*/.npmrc": true,
		"common/autoinstallers/*/lib": true,
		"*/*/.rush": true,
		"**/*.api.json": true,
		"**/*.api.md": true,
		"**/package-public.d.ts": true
	},
	"prettier.prettierPath": "common/temp/node_modules/prettier",
	"prettier.requireConfig": true,
	"typescript.tsdk": "./common/temp/node_modules/.pnpm/node_modules/typescript/lib",
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
